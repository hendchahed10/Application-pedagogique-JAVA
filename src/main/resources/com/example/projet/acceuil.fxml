<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.StackPane?>

<StackPane xmlns:fx="http://javafx.com/fxml"
           fx:controller="com.example.projet.Controller.AcceuilController"
           fx:id="rootPane"
           prefWidth="800" prefHeight="500"
           style="-fx-background-color: linear-gradient(to bottom right, #1976D2, #64B5F6);">

    <AnchorPane>
        <Button fx:id="signInButton"
                text="Connexion"
                onAction="#goToLogin"
                style="-fx-background-color: transparent;
                       -fx-text-fill: white;
                       -fx-border-color: white;
                       -fx-border-radius: 6px;
                       -fx-border-width: 2px;
                       -fx-font-size: 14px;
                       -fx-font-weight: bold;
                       -fx-padding: 8px 20px;
                       -fx-cursor: hand;"
                AnchorPane.topAnchor="20.0"
                AnchorPane.rightAnchor="20.0" />
    </AnchorPane>

    <StackPane mouseTransparent="true">
        <Label fx:id="welcomeLabel"
               text="Bienvenue sur votre plateforme pÃ©dagogique"
               wrapText="true"
               style="-fx-font-size: 28px;
                      -fx-font-weight: bold;
                      -fx-text-fill: white;
                      -fx-padding: 0 40px;
                      -fx-text-alignment: center;" />
    </StackPane>

</StackPane>




