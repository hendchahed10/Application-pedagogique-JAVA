<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.geometry.Pos?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Spinner?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<StackPane xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.projet.Controller.RessourceController" style="-fx-background-color: linear-gradient(to right, #E3F2FD, #BBDEFB);">

    <VBox alignment="CENTER_LEFT" spacing="15" style="-fx-background-color: #FFFFFF; -fx-border-radius: 10px; -fx-padding: 30px; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 10, 0, 0, 4);" maxWidth="400" maxHeight="500">
        <padding>
            <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
        </padding>

        <Label text="Ressource X" style="-fx-font-size: 18px; -fx-text-fill: #2196F3; -fx-font-weight: bold; -fx-padding: 5px;"/>

        <Label text="Titre" style="-fx-font-size: 14px; -fx-text-fill: #333333;" />
        <TextField fx:id="titreField" style="-fx-font-size: 14px; -fx-padding: 8px; -fx-background-color: #FFFFFF; -fx-border-color: #2196F3; -fx-border-width: 1px; -fx-border-radius: 4px; -fx-pref-width: 200px;" />

        <Label text="Description" style="-fx-font-size: 14px; -fx-text-fill: #333333;" />
        <TextField fx:id="descriptionField" style="-fx-font-size: 14px; -fx-padding: 8px; -fx-background-color: #FFFFFF; -fx-border-color: #2196F3; -fx-border-width: 1px; -fx-border-radius: 4px; -fx-pref-width: 200px;" />

        <Label text="Difficulté" style="-fx-font-size: 14px; -fx-text-fill: #333333;" />
        <TextField fx:id="difficulteField" style="-fx-font-size: 14px; -fx-padding: 8px; -fx-background-color: #FFFFFF; -fx-border-color: #2196F3; -fx-border-width: 1px; -fx-border-radius: 4px; -fx-pref-width: 200px;" />

        <Label text="Enseignant" style="-fx-font-size: 14px; -fx-text-fill: #333333;" />
        <TextField fx:id="enseignantField" style="-fx-font-size: 14px; -fx-padding: 8px; -fx-background-color: #FFFFFF; -fx-border-color: #2196F3; -fx-border-width: 1px; -fx-border-radius: 4px; -fx-pref-width: 200px;" />

        <Label text="Document" style="-fx-font-size: 14px; -fx-text-fill: #333333;" />
        <TextField fx:id="documentField" style="-fx-font-size: 14px; -fx-padding: 8px; -fx-background-color: #FFFFFF; -fx-border-color: #2196F3; -fx-border-width: 1px; -fx-border-radius: 4px; -fx-pref-width: 200px;" />

        <HBox alignment="CENTER_LEFT" spacing="10">
            <Label text="Attribuer note :" style="-fx-font-size: 14px; -fx-text-fill: #333333;" />
            <Spinner fx:id="noteSpinner" editable="true" style="-fx-background-color: #FFFFFF; -fx-border-color: #2196F3; -fx-border-width: 1px; -fx-border-radius: 4px;" />
        </HBox>

        <HBox spacing="10" alignment="CENTER_RIGHT">
            <Button text="Favoris" onAction="#handleFavoris" style="-fx-background-color: #2196F3; -fx-text-fill: white; -fx-font-size: 14px; -fx-font-weight: bold; -fx-padding: 8px 16px; -fx-background-radius: 4px; -fx-border-radius: 4px;"/>
            <Button text="Terminé" onAction="#handleTermine" style="-fx-background-color: #2196F3; -fx-text-fill: white; -fx-font-size: 14px; -fx-font-weight: bold; -fx-padding: 8px 16px; -fx-background-radius: 4px; -fx-border-radius: 4px;"/>
        </HBox>
    </VBox>
</StackPane>


