            <VBox alignment="CENTER" prefHeight="80" prefWidth="150" style="-fx-background-color: lightgray; -fx-background-radius: 15;">
               <Label fx:id="consultedLabel" style="-fx-font-size: 24; " text="80" />
               <Label text="NB étudiants" />
            </VBox>
            <VBox alignment="CENTER" prefHeight="80" prefWidth="150" style="-fx-background-color: lightgray; -fx-background-radius: 15;">
               <Label fx:id="completedLabel" style="-fx-font-size: 24;" text="5" />
