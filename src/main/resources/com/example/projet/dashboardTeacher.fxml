<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.collections.FXCollections?>
<?import java.lang.String?>

<BorderPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.projet.Controller.DashboardTeacherController" style="-fx-background-color: linear-gradient(to right, #E3F2FD, #BBDEFB);">

   <top>
      <VBox>
         <Label text="Liste Ressources Crées"
                style="-fx-text-fill: #0D47A1; -fx-font-size: 16px; -fx-font-weight: bold;"/>
         <BorderPane.margin>
            <Insets left="20.0" top="20.0" right="20.0"/>
         </BorderPane.margin>
      </VBox>
   </top>

   <left>
      <ListView fx:id="ressourceListView" prefHeight="300.0" prefWidth="200.0">
         <BorderPane.margin>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
         </BorderPane.margin>
      </ListView>
   </left>

   <center>
      <VBox spacing="20" alignment="TOP_CENTER" style="-fx-padding: 20;">

         <Label text="Tableau de bord enseignant"
                style="-fx-text-fill: #1565C0; -fx-font-size: 26px; -fx-font-weight: bold;"/>

         <HBox spacing="15" alignment="CENTER">
            <VBox alignment="CENTER" style="-fx-background-color: #BBDEFB; -fx-background-radius: 15;" prefWidth="150" prefHeight="80">
               <Label fx:id="nbStudentsLabel" text="" style="-fx-font-size: 24;" />
               <Label text="NB étudiants"/>
            </VBox>
            <VBox alignment="CENTER" style="-fx-background-color: #BBDEFB; -fx-background-radius: 15;" prefWidth="150" prefHeight="80">
               <Label fx:id="nbResourcesLabel" text="" style="-fx-font-size: 24;" />
               <Label text="NB Ressources "/>
            </VBox>
            <VBox alignment="CENTER" style="-fx-background-color: #BBDEFB; -fx-background-radius: 15;" prefWidth="150" prefHeight="80">
               <Label fx:id="averageRatingLabel" text="" style="-fx-font-size: 24;" />
               <Label text="Note Moyen "/>
            </VBox>
            <VBox alignment="CENTER" style="-fx-background-color: #BBDEFB; -fx-background-radius: 15;" prefWidth="150" prefHeight="80">
               <Label fx:id="nbFavorisLabel" text="" style="-fx-font-size: 24;" />
               <Label text="NB Ressources Favoris "/>
            </VBox>
         </HBox>

         <VBox spacing="15" style="-fx-padding: 20; -fx-background-color: #FAFAFA; -fx-border-color: #B0BEC5; -fx-border-radius: 5; -fx-background-radius: 5;">
            <Label text="Ajouter une nouvelle ressource"
                   style="-fx-font-weight: bold; -fx-font-size: 16px; -fx-text-fill: #0D47A1;"/>

            <GridPane hgap="10" vgap="10">
               <columnConstraints>
                  <ColumnConstraints prefWidth="100" halignment="RIGHT"/>
                  <ColumnConstraints prefWidth="300"/>
               </columnConstraints>

               <Label text="Titre:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
               <TextField fx:id="titleField" promptText="Entrez le titre" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

               <Label text="Catégorie:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
               <ComboBox fx:id="categoryComboBox" promptText="Sélectionnez une catégorie" GridPane.rowIndex="1" GridPane.columnIndex="1">
                  <items>
                     <FXCollections fx:factory="observableArrayList">
                        <String fx:value="Informatique"/>
                        <String fx:value="Science"/>
                        <String fx:value="Gestion"/>
                        <String fx:value="Economie"/>
                        <String fx:value="Littérature"/>
                        <String fx:value="Mathématiques"/>
                     </FXCollections>
                  </items>
               </ComboBox>

               <Label text="Description:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
               <TextArea fx:id="descriptionArea" promptText="Entrez la description"
                         prefRowCount="3" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

               <Label text="Difficulté:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
               <fx:define>
                  <ToggleGroup fx:id="difficultyGroup" />
               </fx:define>
               <HBox spacing="10" GridPane.rowIndex="3" GridPane.columnIndex="1">
                  <RadioButton text="Facile" toggleGroup="$difficultyGroup"/>
                  <RadioButton text="Moyen" toggleGroup="$difficultyGroup"/>
                  <RadioButton text="Difficile" toggleGroup="$difficultyGroup"/>
               </HBox>

               <Label text="Document:" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
               <HBox spacing="10" GridPane.rowIndex="4" GridPane.columnIndex="1">
                  <TextField fx:id="documentField" promptText="Chemin du fichier" prefWidth="200"/>
                  <Button text="Télécharger" onAction="#handleDownload"
                          style="-fx-background-color: #1976D2; -fx-text-fill: white;"/>
               </HBox>
            </GridPane>

            <HBox spacing="10" alignment="CENTER_RIGHT">
               <Button text="Ajouter" onAction="#handleAddButton"
                       style="-fx-background-color: #1976D2; -fx-text-fill: white; -fx-font-weight: bold;"/>
            </HBox>
         </VBox>
      </VBox>
   </center>

   <right>
      <Button text="Déconnexion" fx:id="logoutButton" onAction="#handleLogout"
              style="-fx-background-color: #1976D2; -fx-text-fill: white;"
              BorderPane.alignment="TOP_RIGHT">
         <BorderPane.margin>
            <Insets right="10.0"/>
         </BorderPane.margin>
      </Button>
   </right>

</BorderPane>
