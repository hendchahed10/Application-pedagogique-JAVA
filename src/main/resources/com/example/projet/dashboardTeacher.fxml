<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane prefHeight="600" prefWidth="1000" style="-fx-background-color: black;" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.projet.Controller.DashboardTeacherController">

   <center>
      <VBox alignment="TOP_CENTER" spacing="20" style="-fx-padding:20; -fx-border-color: white; -fx-border-width: 0 0 0 1;">
         <Label style="-fx-font-size: 24;" text="Tableau de bord étudiant" textFill="white" />
